---
import HeaderLink from "./HeaderLink.astro";
import { Icon } from "astro-icon";
---

<aside id="mobile-nav">
  <nav>
    <HeaderLink href="/"><Icon name="home" />Home</HeaderLink>
    <HeaderLink href="/clients"><Icon name="briefcase" />Clients</HeaderLink>
    <HeaderLink href="/blog"><Icon name="books" />Blog</HeaderLink>
    <HeaderLink href="/about"><Icon name="user" />About</HeaderLink>
  </nav>
</aside>

<style>
  aside {
    transition: all 300ms ease-out;
    width: 70vw;
    background-color: #011017;
    position: fixed;
    top: 80px;
    right: 0;
    z-index: 9;
    padding: 12px 18px;
    height: calc(100vh - 80px);
    box-shadow: -6px 0 10px rgba(0, 0, 0, 0.3);
    transform: translateX(105vw);
  }

  @media screen and (min-width: 768px) {
    aside {
      display: none;
    }
  }

  aside a {
    display: flex;
    align-items: center;
    text-decoration: none;
    height: 55px;
    color: white;
    font-weight: 800;
    border-radius: 12px;
    padding: 0 12px;
  }

  aside a svg {
    width: 24px;
    margin-right: 8px;
  }

  aside a.active {
    color: var(--color-primary);
    background-color: black;
  }
</style>
